<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @restaurant.image.url %>
    </div>
  </div>
  <div class="col-md-6">
    <h3><%= @restaurant.name %></h3>
    <p><%= number_to_currency(restaurant.price) %></p>
    <p><%= @restaurant.description %></p>
  </div>
</div>

<%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-link" %>
<%= link_to 'Back', restaurant_path, class: "btn btn-link" %>
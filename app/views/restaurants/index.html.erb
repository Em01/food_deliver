<div class= "jumbotron">
<h2>Test header</h2>
</div>
<div class="center">
  <div class="row">
    <% @restaurants.each do |restaurant| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= image_tag restaurant.image.url %>
        <div class="caption">
          <h3><%= restaurant.name %></h3>
          <p><%= number_to_currency(restaurant.price) %></p>
          <%= link_to 'Show', restaurant, class: "btn btn-link" %>
          <%= link_to 'Edit', edit_restaurant_path(listing), class: "btn btn-link" %>
          <%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to "New restaurant", new_restaurant_path, class: "btn btn-link" %>


